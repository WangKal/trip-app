{
  "builds": [
    {
      "src": "client",
      "use": "@vercel/vite",
      "dest": "dist/public", // Vite will output here
      "installCommand": "npm install --legacy-peer-deps"
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "dest": "dist", // esbuild will output here
      "installCommand": "npm install --legacy-peer-deps"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ]
}